<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/gps_status"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:textColor="@color/color_lightgray"
              android:textStyle="bold"
              android:text="Cannot get Location"
              android:textSize="20dp" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/gps_status2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/color_lightgray"
              android:textStyle="bold"
              android:text="Check if GPS or network are turned on."
              android:textSize="12dp"
              android:layout_below="@id/gps_status"
              android:layout_centerHorizontal="true"/>

    <ImageView
            android:id="@+id/image_brandmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/brandmark"
            android:layout_above="@id/gps_status"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:paddingLeft="4dp"
            />

