<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_layout"
                android:background="@drawable/lozenge"
                android:layout_margin="0dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:descendantFocusability="beforeDescendants"
                android:orientation="vertical"
                android:gravity="center"
        >

    <ImageView
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            android:padding="0dp"/>

    <ImageView
            android:id="@+id/image_brandmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/brandmark"
            android:layout_toRightOf="@id/image_view"
            android:paddingTop="5dp"
            android:paddingLeft="4dp"
            />

    <TextView
            android:id="@+id/text_entity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/image_brandmark"
            android:textColor="@color/color_darkgray"
            android:paddingLeft="5dp"
            android:paddingTop="4dp"
            android:maxWidth="120dp"
            android:paddingRight="0dp"
            android:textSize="14dp"
            android:ellipsize="end"
            android:singleLine="true"/>

    <TextView
            android:id="@+id/text_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/text_entity"
            android:textColor="@color/color_darkgray"
            android:paddingLeft="0dp"
            android:paddingTop="4dp"
            android:paddingRight="5dp"
            android:textSize="14dp"
            android:singleLine="true"/>

    <TextView
            android:id="@+id/text_dish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_view"
            android:layout_below="@id/text_entity"
            android:textColor="@color/color_red"
            android:paddingLeft="5dp"
            android:paddingBottom="4dp"
            android:textSize="20dp"
            android:ellipsize="end"
            android:singleLine="true"/>



</RelativeLayout>