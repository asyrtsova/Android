<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/relative_layout"
             android:background="@drawable/widget_background"
             android:layout_margin="2dp"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
        >

    <TextView
            android:id="@+id/text_user_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/text_color1"
            android:padding="6dp"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_color1"
            android:padding="6dp"
            android:textStyle="bold"/>


    <TextView
            android:id="@+id/text_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text_user_location"
            android:gravity="center_horizontal"
            android:textColor="@color/text_color1"
            android:padding="6dp"
            android:text="Loading (hopefully) ..."/>


</RelativeLayout><!-- From: /Users/administrator/AndroidStudioProjects/NessProject/Ness/src/main/res/layout/widget_layout.xml -->