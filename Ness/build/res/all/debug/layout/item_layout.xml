<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_layout"
                android:background="@drawable/widget_background"
                android:layout_margin="0dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:descendantFocusability="beforeDescendants"
                android:orientation="vertical"
                android:gravity="center"
        >
    <ImageView
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            android:padding="0dp"/>

    <TextView
            android:id="@+id/text_user_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_view"
            android:textColor="@color/color_lightgray"
            android:padding="3dp"
            android:textSize="12dp"
            android:textStyle="bold"/>

    <Button
            android:id="@+id/refresh_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textSize="8dp"
            android:padding="0dp"
            android:text="R" />

    <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/refresh_button"
            android:textColor="@color/color_lightgray"
            android:padding="3dp"
            android:textSize="12dp"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_view"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color_red"
            android:padding="3dp"
            android:textSize="16dp"
            android:text=""/>

    <TextView
            android:id="@+id/text_entity_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/text_title"
            android:layout_toRightOf="@id/image_view"
            android:textColor="@color/color_darkgray"
            android:paddingLeft="3dp"
            android:textSize="10dp"/>


</RelativeLayout><!-- From: file:/Users/administrator/AndroidStudioProjects/NessProject/Ness/src/main/res/layout/item_layout.xml -->