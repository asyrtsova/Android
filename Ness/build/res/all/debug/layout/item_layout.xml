<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_layout"
                android:background="@drawable/widget_background"
                android:layout_margin="0dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:descendantFocusability="beforeDescendants"
                android:orientation="vertical"
                android:gravity="center"
        >
    <ImageView
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            android:padding="0dp"/>

    <TextView
            android:id="@+id/text_debug_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_lightgray"
            android:padding="6dp"
            android:textSize="6dp"
            android:textStyle="bold"/>

    <ImageView
            android:id="@+id/image_brandmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/brandmark"
            android:layout_toRightOf="@id/image_view"
            android:paddingTop="5dp"
            android:paddingLeft="4dp"
            />

    <TextView
            android:id="@+id/text_entity_info"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/image_brandmark"
            android:textColor="@color/color_darkgray"
            android:paddingLeft="5dp"
            android:paddingTop="4dp"
            android:paddingRight="5dp"
            android:textSize="12dp"/>

    <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_view"
            android:layout_below="@id/text_entity_info"
            android:textColor="@color/color_red"
            android:paddingLeft="5dp"
            android:paddingBottom="4dp"
            android:textSize="16dp"
            android:text=""/>



</RelativeLayout><!-- From: file:/Users/administrator/AndroidStudioProjects/NessProject/Ness/src/main/res/layout/item_layout.xml -->