<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_layout"
                android:background="@drawable/widget_background"
                android:layout_margin="0dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:descendantFocusability="beforeDescendants"
                android:orientation="vertical"
                android:gravity="center"
        >
    <ImageView
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            android:padding="0dp"/>

    <ImageView
            android:id="@+id/image_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location_pin"
            android:layout_toRightOf="@id/image_view"
            android:paddingTop="8dp"
            android:paddingLeft="4dp"
        />

    <TextView
            android:id="@+id/text_user_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_location"
            android:textColor="@color/color_lightgray"
            android:paddingTop="4dp"
            android:paddingLeft="3dp"
            android:textSize="12dp"
            android:textStyle="bold"/>

    <ImageButton
            android:id="@+id/refresh_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textSize="8dp"
            android:paddingRight="8dp"
            android:paddingTop="6dp"
            android:src="@drawable/refresh_upstate"
            android:scaleType="center"
            android:background="@null"/>

    <TextView
            android:id="@+id/text_debug_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/refresh_button"
            android:textColor="@color/color_lightgray"
            android:padding="6dp"
            android:textSize="6dp"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/refresh_button"
            android:textColor="@color/color_lightgray"
            android:paddingTop="4dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textSize="12dp"
            android:textStyle="bold"/>

    <ImageView
            android:id="@+id/image_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clock_img"
            android:layout_toLeftOf="@id/text_time"
            android:paddingTop="8dp"
            android:paddingLeft="3dp"
            />

    <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_view"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color_red"
            android:paddingLeft="5dp"
            android:paddingBottom="4dp"
            android:textSize="16dp"
            android:text=""/>

    <TextView
            android:id="@+id/text_entity_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/text_title"
            android:layout_toRightOf="@id/image_view"
            android:textColor="@color/color_darkgray"
            android:paddingLeft="5dp"
            android:textSize="10dp"/>

    <ImageView
            android:id="@+id/image_brandmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/brandmark"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            />


</RelativeLayout><!-- From: file:/Users/administrator/AndroidStudioProjects/NessProject/Ness/src/main/res/layout/item_layout.xml -->