<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_layout"
                android:background="@drawable/lozenge"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"  >

    <ImageView
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="center"/>

    <ImageView
            android:id="@+id/image_brandmark"
            android:src="@drawable/brandmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_view"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"  />

    <TextView
            android:id="@+id/text_entity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/image_brandmark"
            android:maxWidth="110dp"
            android:paddingLeft="5dp"
            android:paddingTop="4dp"
            android:paddingRight="0dp"
            android:textColor="@color/color_darkgray"
            android:textSize="14dp"
            android:ellipsize="end"
            android:singleLine="true"  />

    <TextView
            android:id="@+id/text_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/text_entity"
            android:paddingLeft="0dp"
            android:paddingTop="4dp"
            android:paddingRight="5dp"
            android:textColor="@color/color_darkgray"
            android:textSize="14dp"
            android:singleLine="true"  />

    <TextView
            android:id="@+id/text_dish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_view"
            android:layout_below="@id/text_entity"
            android:paddingLeft="5dp"
            android:paddingBottom="4dp"
            android:textColor="@color/color_red"
            android:textSize="20dp"
            android:ellipsize="end"
            android:singleLine="true"  />

</RelativeLayout><!-- From: file:/Users/administrator/AndroidStudioProjects/NessProject/Ness/src/main/res/layout/item_layout.xml -->